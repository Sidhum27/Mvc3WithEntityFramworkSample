@model MvcWeb1.Models.Library

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Library</legend>

        @Html.HiddenFor(model => model.LibraryID)

        <div class="editor-label">
            @Html.LabelFor(model => model.FriendshipID, "Friendship")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FriendshipName")
            @Html.ValidationMessageFor(model => model.FriendshipID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ItemID, "Item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemID", String.Empty)
            @Html.ValidationMessageFor(model => model.ItemID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateAdded)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Note)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Note)
            @Html.ValidationMessageFor(model => model.Note)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
