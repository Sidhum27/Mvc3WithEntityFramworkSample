@model MvcWeb1.Models.Library

<h2>Request item</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 @ViewBag.thisisyou 
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    if (@ViewBag.notFriendYet != null)
    {
        @Html.Raw(@ViewBag.notFriendYet)
    }
    else
    {
    <fieldset>
        <legend>Library</legend>

      <div class="editor-label">
            @Html.LabelFor(model => model.FriendshipID, "Friendship")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FriendshipID")
            @Html.ValidationMessageFor(model => model.FriendshipID)
        </div>
@{
    if(ViewBag.numberOfItem == 0){
        <p> This person does not have any items</p>
    }else{
        <div class="editor-label">
            @Html.LabelFor(model => model.ItemID, "Item")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemID")
            @Html.ValidationMessageFor(model => model.ItemID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateAdded)
        </div>
        <div class="editor-field">@Model.DateAdded
            @Html.HiddenFor(model => model.DateAdded)
            @Html.ValidationMessageFor(model => model.DateAdded)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Note)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Note)
            @Html.ValidationMessageFor(model => model.Note)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
        }
        }
    </fieldset>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
