@model MvcWeb1.Models.Message

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Message</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageSubject)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MessageSubject)
            @Html.ValidationMessageFor(model => model.MessageSubject)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FromUser)
        </div>
        <div class="editor-field">@Model.FromUser
            @Html.HiddenFor(model => model.FromUser)
            @Html.ValidationMessageFor(model => model.FromUser)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ToUser)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ToUser", new SelectList(ViewBag.users))
            @Html.ValidationMessageFor(model => model.ToUser)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageBody)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.MessageBody)
            @Html.ValidationMessageFor(model => model.MessageBody)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateSend)
        </div>
        <div class="editor-field">@Model.DateSend
            @Html.HiddenFor(model => model.DateSend)
            @Html.ValidationMessageFor(model => model.DateSend)
        </div>
        <br />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
