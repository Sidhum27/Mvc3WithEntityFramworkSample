@model IEnumerable<MvcWeb1.Models.Item>

@{
    ViewBag.Title = "Item";
}

<h2>List of your items</h2>
<p>
 <span class="stext">     @Html.ActionLink("Create New", "Create") </span>
</p>


@foreach (var item in Model)
{
<div class="list-view">

 <div class="user_picture">
 <img src="@Html.DisplayFor(modelItem => item.ItemPic)" width="80px" height="80px" alt="@item.Name" />   
 </div>
 <span class="stext_gray">Item name: </span>
 <a href="Item/Details/@Html.DisplayFor(modelItem => item.ItemID)" >@Html.DisplayFor(modelItem => item.Name)</a>
<br />
 <span class="stext_gray">Item category: </span>
     @Html.DisplayFor(modelItem => item.Category.Name) 
<br />
 <span class="stext_gray">Date added: </span>
    @Html.Raw(item.DateAdded.ToString("ddd d MMM yyyy")) 
<br />
 <span class="stext_gray">Item price: </span>
     @Html.DisplayFor(modelItem => item.ItemPrice)
<div class="text_right"> <span class="stext">
     @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }) |
     @Html.ActionLink("Details", "Details", new { id = item.ItemID }) |
     @Html.ActionLink("Delete", "Delete", new { id = item.ItemID })
     </span>
</div>

</div>
    
}
 
